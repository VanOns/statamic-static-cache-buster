{
  "name": "van-ons/statamic-static-cache-buster",
  "description": "A Statamic package that expands the standard static cache invalidation.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "statamic",
    "static cache",
    "van ons"
  ],
  "authors": [
    {
      "name": "Jim Elvers",
      "email": "jim@van-ons.nl"
    },
    {
      "name": "Van Ons",
      "email": "opensource@van-ons.nl"
    }
  ],
  "require": {
    "php": "^8.2",
    "laravel/framework": ">=10",
    "statamic/cms": ">=5"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "larastan/larastan": "^2.9"
  },
  "scripts": {
    "analyse": "./vendor/bin/phpstan analyse --memory-limit=1G",
    "format": "./vendor/bin/php-cs-fixer fix",
    "format:check": "./vendor/bin/php-cs-fixer check"
  },
  "autoload": {
    "psr-4": {
      "VanOns\\StatamicStaticCacheBuster\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "VanOns\\StatamicStaticCacheBuster\\StatamicStaticCacheBusterServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pixelfear/composer-dist-plugin": true
    }
  }
}
